<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <!--  Map  -->
    <LinearLayout 
        android:id="@+id/topmap"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:gravity="center">
        
    </LinearLayout>
    
    <!--  Address under map -->
    <LinearLayout 
        android:id="@+id/map_address_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_bottom_gray">
        
        <TextView
                android:id="@+id/map_address_tv"
                android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:gravity="center"
        		android:textSize="@dimen/fonts_small"
        		android:textColor="@color/nobel_gray"
        		android:padding="5dp">
        </TextView>
        
    </LinearLayout>
    
    <!--  facebook people -->
    <HorizontalScrollView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">
        
            <LinearLayout
                android:id="@+id/layout_people"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:gravity="center"
        		android:orientation="horizontal"
        		android:background="@drawable/border_solid_lines"
        		android:paddingTop="5dp" >
        
          </LinearLayout> 
    </HorizontalScrollView>
    
    <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        		android:text="People who are currently at the location">
    		</TextView>
    </RelativeLayout>
   
    
    
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:layout_weight="0.55"
       android:orientation="vertical"
       android:padding="5dp"
       android:baselineAligned="false"
       android:layout_marginTop="15dp">
       
            
           		<!-- Business name title -->
       	 		<TextView
         	    	android:id="@+id/business_name_title"
         	    	android:text="@string/business_name"
         	    	style="@style/vendor_details_title_descriptor"/>
         
            	 	<!--  Business TextView changing -->
         		<TextView
            		 android:id="@+id/business_name_tv"
            		 style="@style/vendor_details_textview_info"
            		 android:text="Business Name"/>
        
            	<!--  Category -->
         		<TextView
            		 android:id="@+id/category_title"
            		 android:text="Category:"
            		 style="@style/vendor_details_title_descriptor"/>
         
            	<!--  Category changing -->
          		<TextView
            		 android:id="@+id/category_tv"
            		 style="@style/vendor_details_textview_info"/>
          	
          		 <!--  Website title -->
         		<TextView
            		 android:id="@+id/website_title"
            		 android:text="Website:"
            		 style="@style/vendor_details_title_descriptor"/>
         
            	<!--  Website textview changing -->
          		<TextView
            		 android:id="@+id/website_tv"
            		 style="@style/vendor_details_textview_info"/>
          	
      
       
    </LinearLayout>
    

</LinearLayout>
